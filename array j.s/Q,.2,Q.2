// Write a program to subtract two matrices and store them in a separate matrix.
FOOR LOOP :-


let matrix1 = [
  [5, 8, 6],
  [4, 7, 2]
];

let matrix2 = [
  [3, 2, 1],
  [1, 5, 4]
];


let result = [];


for (let i = 0; i < matrix1.length; i++) {
  result[i] = [];
  for (let j = 0; j < matrix1[i].length; j++) {
    result[i][j] = matrix1[i][j] - matrix2[i][j];
  }
}

console.log("Resultant Matrix:" , result);


While loop :-

let matrix1 = [
  [5, 8, 6],
  [4, 7, 2]
];

let matrix2 = [
  [3, 2, 1],
  [1, 5, 4]
];


let result = [];


let i = 0;


while (i < matrix1.length) {
  result[i] = [];
  let j = 0; 
  while (j < matrix1[i].length) {
    result[i][j] = matrix1[i][j] - matrix2[i][j];
    j = j + 1; 
  }
  i = i + 1;
}


console.log("Resultant Matrix:" , result);
