// Given an array ([1,2,3,4,5,6,7]), Write a program to take a number from the user and check whether it exists in this array or not.
// if number = 7 then the output should be "Yes" because 7 is present in the array.
// if number = 100 then output should be "No" because 100 is not present in the array.


let arr = [1, 2, 3, 4, 5, 6, 7];


let num = 7;  

let found = false;

for (let i = 0; i < 7; i++) {
    if (arr[i] === num) {
        found = true;
        break;
    }
}

if (found == true) {
    console.log("Yes");
} else {
    console.log("No");
}
